{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,
    
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    
    "baseUrl": ".",
    "paths": {
      "@fancy-react/core": ["packages/core/src"],
      "@fancy-react/reconciler": ["packages/reconciler/src"],
      "@fancy-react/scheduler": ["packages/scheduler/src"],
      "@fancy-react/shared": ["packages/shared/src"],
      "@fancy-react/dom": ["packages/dom/src"],
      "@fancy-react/native": ["packages/native/src"],
      "@fancy-react/server-runtime": ["packages/server-runtime/src"],
      "@fancy-react/devtools": ["packages/devtools/src"],
      "@fancy-react/test-utils": ["packages/test-utils/src"],
      "@fancy-react/eslint-plugin": ["packages/eslint-plugin/src"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next"
  ]
}